<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlesXamarinForms.ControlesEntrada">
    <ContentPage.Content>
        <StackLayout>
            <Editor Placeholder="Ingrese un Comentario" AutoSize="TextChanges" />
            <Entry Placeholder="DNI" x:Name="txtDNI" MaxLength="8" Keyboard="Numeric"/>
            <Entry Placeholder="Contraseña" IsPassword="True"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>